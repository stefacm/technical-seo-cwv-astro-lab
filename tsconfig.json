{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/types/*": ["src/types/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*",
    "*.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}