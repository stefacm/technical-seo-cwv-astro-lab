---
import BaseLayout from '../components/BaseLayout.astro';
import { createContentfulService } from '../lib/contentful.ts';
import { mockBlogPosts, mockGuides } from '../lib/mocks.ts';

export const prerender = false; // SSR route

// Get search query from URL parameters
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';

// Initialize content service with fallback to mocks
const contentfulService = createContentfulService();
let searchResults: Array<{
  type: 'blog' | 'guide';
  title: string;
  slug: string;
  excerpt: string;
  category: string;
}> = [];

if (query.trim()) {
  try {
    if (contentfulService) {
      // Search in real Contentful data
      const [blogPosts, guides] = await Promise.all([
        contentfulService.getBlogPosts(50),
        contentfulService.getGuides(50),
      ]);

      // Filter blog posts by query
      const blogResults = blogPosts
        .filter(
          (post) =>
            post.title.toLowerCase().includes(query.toLowerCase()) ||
            post.excerpt.toLowerCase().includes(query.toLowerCase()) ||
            post.tags.some((tag) => tag.toLowerCase().includes(query.toLowerCase()))
        )
        .map((post) => ({
          type: 'blog' as const,
          title: post.title,
          slug: post.slug,
          excerpt: post.excerpt,
          category: post.category.name,
        }));

      // Filter guides by query
      const guideResults = guides
        .filter(
          (guide) =>
            guide.title.toLowerCase().includes(query.toLowerCase()) ||
            guide.description.toLowerCase().includes(query.toLowerCase()) ||
            guide.tools.some((tool) => tool.toLowerCase().includes(query.toLowerCase()))
        )
        .map((guide) => ({
          type: 'guide' as const,
          title: guide.title,
          slug: guide.slug,
          excerpt: guide.description,
          category: guide.category.name,
        }));

      searchResults = [...blogResults, ...guideResults];
    } else {
      // Search in mock data
      const blogResults = mockBlogPosts
        .filter(
          (post) =>
            post.title.toLowerCase().includes(query.toLowerCase()) ||
            post.excerpt.toLowerCase().includes(query.toLowerCase()) ||
            post.tags.some((tag) => tag.toLowerCase().includes(query.toLowerCase()))
        )
        .map((post) => ({
          type: 'blog' as const,
          title: post.title,
          slug: post.slug,
          excerpt: post.excerpt,
          category: post.category.name,
        }));

      const guideResults = mockGuides
        .filter(
          (guide) =>
            guide.title.toLowerCase().includes(query.toLowerCase()) ||
            guide.description.toLowerCase().includes(query.toLowerCase()) ||
            guide.tools.some((tool) => tool.toLowerCase().includes(query.toLowerCase()))
        )
        .map((guide) => ({
          type: 'guide' as const,
          title: guide.title,
          slug: guide.slug,
          excerpt: guide.description,
          category: guide.category.name,
        }));

      searchResults = [...blogResults, ...guideResults];
    }
  } catch (error) {
    console.error('Search error:', error);
    searchResults = [];
  }
}

// SEO configuration for search page - NOINDEX and NOFOLLOW
const seoProps = {
  title: query ? `Search Results for "${query}"` : 'Search',
  description: 'Search through our blog posts and guides to find the content you need.',
  noindex: true,
  nofollow: true,
  canonical: new URL('/search', Astro.site || 'http://localhost:4321').href,
};
---

<BaseLayout seo={seoProps}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Search
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Find blog posts and guides that match your interests
      </p>
    </div>

    <!-- Search Form -->
    <div class="mb-12">
      <form method="GET" action="/search" class="max-w-2xl mx-auto">
        <div class="relative">
          <input
            type="text"
            name="q"
            value={query}
            placeholder="Search for blog posts, guides, or topics..."
            class="w-full px-4 py-3 pl-12 pr-4 text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            autocomplete="off"
          />
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
        <button
          type="submit"
          class="mt-4 w-full sm:w-auto px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
        >
          Search
        </button>
      </form>
    </div>

    <!-- Search Results -->
    {query && (
      <div class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">
          {searchResults.length > 0 
            ? `Found ${searchResults.length} result${searchResults.length === 1 ? '' : 's'} for "${query}"`
            : `No results found for "${query}"`
          }
        </h2>

        {searchResults.length > 0 && (
          <div class="space-y-6">
            {searchResults.map((result) => (
              <article class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex items-center space-x-2">
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                      result.type === 'blog' 
                        ? 'bg-blue-100 text-blue-800' 
                        : 'bg-green-100 text-green-800'
                    }`}>
                      {result.type === 'blog' ? 'Blog Post' : 'Guide'}
                    </span>
                    <span class="text-sm text-gray-500">{result.category}</span>
                  </div>
                </div>
                
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  <a 
                    href={`/${result.type === 'blog' ? 'blog' : 'guides'}/${result.slug}`}
                    class="hover:text-blue-600 transition-colors"
                  >
                    {result.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {result.excerpt}
                </p>
                
                <a 
                  href={`/${result.type === 'blog' ? 'blog' : 'guides'}/${result.slug}`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors"
                >
                  Read more
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </article>
            ))}
          </div>
        )}

        {searchResults.length === 0 && query && (
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No results found</h3>
            <p class="text-gray-600 mb-6">
              Try adjusting your search terms or browse our content categories.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <a href="/blog" class="px-4 py-2 bg-blue-100 text-blue-800 rounded-lg hover:bg-blue-200 transition-colors">
                Browse Blog Posts
              </a>
              <a href="/guides" class="px-4 py-2 bg-green-100 text-green-800 rounded-lg hover:bg-green-200 transition-colors">
                Browse Guides
              </a>
              <a href="/faq" class="px-4 py-2 bg-purple-100 text-purple-800 rounded-lg hover:bg-purple-200 transition-colors">
                View FAQ
              </a>
            </div>
          </div>
        )}
      </div>
    )}

    <!-- Search Tips (only show when no query) -->
    {!query && (
      <div class="bg-gray-50 rounded-lg p-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Search Tips</h3>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-start">
            <svg class="h-5 w-5 text-gray-400 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Search by title, content, or tags
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-gray-400 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Use specific keywords for better results
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-gray-400 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Search covers both blog posts and guides
          </li>
        </ul>
      </div>
    )}
  </div>

  <!-- Enhanced Search Component with Client-Side Hydration -->
  <script>
    // Enhanced search functionality with client-side improvements
    class SearchEnhancer {
      searchInput: HTMLInputElement | null;
      searchForm: HTMLFormElement | null;

      constructor() {
        this.searchInput = document.querySelector('input[name="q"]');
        this.searchForm = document.querySelector('form');
        this.init();
      }

      init(): void {
        if (this.searchInput) {
          // Add search suggestions and enhanced UX
          this.searchInput.addEventListener('input', this.debounce(this.handleInput.bind(this), 300));
          
          // Focus search input on page load if no query
          const urlParams = new URLSearchParams(window.location.search);
          if (!urlParams.get('q')) {
            this.searchInput.focus();
          }
        }
      }

      handleInput(event: Event): void {
        const target = event.target as HTMLInputElement;
        const query = target.value.trim();
        
        // Add visual feedback for search input
        if (query.length > 0) {
          target.classList.add('ring-2', 'ring-blue-500');
        } else {
          target.classList.remove('ring-2', 'ring-blue-500');
        }
      }

      debounce(func: (...args: any[]) => void, wait: number): (...args: any[]) => void {
        let timeout: NodeJS.Timeout;
        return function executedFunction(...args: any[]) {
          const later = () => {
            clearTimeout(timeout);
            func(...args);
          };
          clearTimeout(timeout);
          timeout = setTimeout(later, wait);
        };
      }
    }

    // Initialize search enhancer when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => new SearchEnhancer());
    } else {
      new SearchEnhancer();
    }
  </script>
</BaseLayout>