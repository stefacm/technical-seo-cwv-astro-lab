---
export interface ReservedSpaceProps {
  width?: string | number;
  height?: string | number;
  minHeight?: string | number;
  aspectRatio?: '1:1' | '16:9' | '4:3' | '3:2' | 'auto';
  className?: string;
  placeholder?: boolean;
  placeholderText?: string;
}

const {
  width = '100%',
  height = 'auto',
  minHeight,
  aspectRatio = 'auto',
  className = '',
  placeholder = false,
  placeholderText = 'Loading...',
} = Astro.props as ReservedSpaceProps;

// Convert numeric values to pixels
const formatDimension = (value: string | number | undefined) => {
  if (typeof value === 'number') {
    return `${value}px`;
  }
  return value || 'auto';
};

const formattedWidth = formatDimension(width);
const formattedHeight = formatDimension(height);
const formattedMinHeight = formatDimension(minHeight);

// Generate aspect ratio classes
const getAspectRatioClass = (ratio: string) => {
  switch (ratio) {
    case '1:1':
      return 'aspect-square';
    case '16:9':
      return 'aspect-video';
    case '4:3':
      return 'aspect-[4/3]';
    case '3:2':
      return 'aspect-[3/2]';
    default:
      return '';
  }
};

const aspectRatioClass = getAspectRatioClass(aspectRatio);

// Generate inline styles
const inlineStyles = {
  width: formattedWidth,
  height: formattedHeight,
  minHeight: formattedMinHeight,
};

// Filter out undefined values
const styles = Object.entries(inlineStyles)
  .filter(([_, value]) => value && value !== 'auto')
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');

// Ensure variables are used
void aspectRatioClass;
void styles;
---

<div 
  class={`reserved-space ${aspectRatioClass} ${className}`}
  style={styles}
  data-reserved-space="true"
>
  {placeholder && (
    <div class="flex items-center justify-center h-full bg-gray-50 border-2 border-dashed border-gray-200 rounded-lg">
      <div class="text-center text-gray-500">
        <svg class="w-8 h-8 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="text-sm">{placeholderText}</p>
      </div>
    </div>
  )}
  
  <slot />
</div>

<style>
  /* Ensure reserved space prevents layout shift */
  .reserved-space {
    contain: layout style;
    position: relative;
  }
  
  /* Custom aspect ratios */
  .aspect-square {
    aspect-ratio: 1 / 1;
  }
  
  .aspect-video {
    aspect-ratio: 16 / 9;
  }
  
  .aspect-\[4\/3\] {
    aspect-ratio: 4 / 3;
  }
  
  .aspect-\[3\/2\] {
    aspect-ratio: 3 / 2;
  }
  
  /* Ensure content fits within reserved space */
  .reserved-space > :global(*) {
    max-width: 100%;
    max-height: 100%;
  }
  
  /* Smooth transitions when content loads */
  .reserved-space {
    transition: all 0.3s ease-in-out;
  }
  
  /* Prevent overflow that could cause layout shift */
  .reserved-space {
    overflow: hidden;
  }
</style>

<script is:inline>
  // Monitor for layout shifts and log warnings in development
  if (import.meta.env.DEV) {
    // Use ResizeObserver to detect unexpected size changes
    const reservedSpaces = document.querySelectorAll('[data-reserved-space="true"]');
    
    reservedSpaces.forEach((element) => {
      const resizeObserver = new ResizeObserver((entries) => {
        entries.forEach((entry) => {
          const { width, height } = entry.contentRect;
          
          // Store initial dimensions
          if (!element.dataset.initialWidth) {
            element.dataset.initialWidth = width.toString();
            element.dataset.initialHeight = height.toString();
            return;
          }
          
          // Check for significant size changes that could cause CLS
          const initialWidth = parseFloat(element.dataset.initialWidth);
          const initialHeight = parseFloat(element.dataset.initialHeight);
          
          const widthChange = Math.abs(width - initialWidth) / initialWidth;
          const heightChange = Math.abs(height - initialHeight) / initialHeight;
          
          // Warn if size changes by more than 5%
          if (widthChange > 0.05 || heightChange > 0.05) {
            console.warn(
              'Potential CLS detected in reserved space:',
              element,
              `Width change: ${(widthChange * 100).toFixed(1)}%`,
              `Height change: ${(heightChange * 100).toFixed(1)}%`
            );
          }
        });
      });
      
      resizeObserver.observe(element);
    });
  }
</script>